<h1>Burgers!</h1>

<h2>Burgers to be eaten</h2>

<ol>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="index/update/{{this.id}}?_method=PUT" method="POST">

          <button type="submit">Devour!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ol>

<h2>Add A Burger</h2>

<form class="create-form" action="index/create" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add burger!</button>
</form>

<h2>Burgers that have been devoured</h2>

<ol>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ol>


